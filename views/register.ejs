<% var title = 'Formulaire login' %>
<% include head %>

<section id="form"><!--form-->
    <div class="container">


        <form class="register-form col-md-5" method="post" action="/checkRegister">
            <fieldset>
                <legend>Inscription</legend>
                <div class="form-group">
                    <label for="email_register">Email :</label>
                    <input type="email" class="form-control" id="email_register" name="email">
                </div>
                <div class="form-group">
                    <label for="username_register">Username :</label>
                    <input type="text" class="form-control" id="username_register" name="username">
                </div>
                <div class="form-group">
                    <label for="password_register">Password :</label>
                    <input type="password" class="form-control" id="password_register" name="password">
                </div>

                <input id="btn_login" type="submit" class="btn btn-outline-primary" value="Envoyer"/>
            </fieldset>
        </form>

    </div>
</section><!--/form-->

<% include foot %>