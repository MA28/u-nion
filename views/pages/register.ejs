<% var title = 'Formulaire login' %>

<% include head %>

<section id="form"><!--form-->
    <div class="container">

        <div class="login-form"><!--login form-->
            <h2 style="text-align : center;">Register</h2>
            <form method="post" action="/pages/register/check">
                <input style="display: block; margin : auto; width:50%;" type="email" name="email" placeholder="Email" autofocus/>
                <br/>
                <input style="display: block; margin : auto; width:50%;" type="text" name="nickname" placeholder="Username" autofocus/>
                <br/>
                <input style="display: block; margin : auto; width:50%;" type="password" name="password" placeholder="Password" />
                <br/>
                <button style="display: block; margin : auto; width:20%;" type="submit" value="Login" class="btn btn-default">Register</button>
            </form>
        </div><!--/login form-->


    </div>
</section><!--/form-->

<% include foot %>